<Application
    x:Class="Modelbouwer.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:Modelbouwer.Converters"
    xmlns:local="clr-namespace:Modelbouwer"
    StartupUri="MainWindow.xaml"
    >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Icons/Icons.xaml" />
                <ResourceDictionary Source="Resources/Icons/TimeIcons.xaml" />
                <ResourceDictionary Source="Resources/Languages/Language.xaml" />
                <ResourceDictionary Source="Resources/Styles/Button.xaml" />
                <ResourceDictionary Source="Resources/Styles/ComboBox.xaml" />
                <ResourceDictionary Source="Resources/Styles/DatePicker.xaml" />
                <ResourceDictionary Source="Resources/Styles/DataGrid.xaml" />
                <ResourceDictionary Source="Resources/Styles/General.xaml" />
                <ResourceDictionary Source="Resources/Styles/Label.xaml" />
                <ResourceDictionary Source="Resources/Styles/TextBlock.xaml" />
                <ResourceDictionary Source="Resources/Styles/TextBox.xaml" />
                <ResourceDictionary Source="Resources/Styles/ToggleButton.xaml" />
                <ResourceDictionary Source="Resources/Styles/TreeView.xaml" />
                <ResourceDictionary Source="Resources/Styles/XMLValues.xaml" />
                <ResourceDictionary Source="Resources/Themes/DefaultColors.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converter:CurrencyConverter x:Key="CurrencyConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
